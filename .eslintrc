{
    "root": true,
    "extends": ["standard-jsx"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "arrowFunctions": true,
            "blockBindings": true,
            "generators": true,
            "modules": true,
            "experimentalObjectRestSpread": true,
            "classes": true,
            "jsx": true
        }
    },
    "rules": {
        "import/extensions": ["warn", { "jsx": "never", "js": "never" }],

        "arrow-parens": ["error", "always"],
        "semi": ["error", "always"],
        "curly": "error",
        "no-var": "error",
        "one-var": ["warn", "never"],
        "no-undef": "error",
        "no-unused-vars": "warn",
        "comma-dangle": ["error", "never"],
        "prefer-arrow-callback": "warn",
        "prefer-const": "error",
        "prefer-spread": "error",
        "prefer-template": "error",
        "require-yield": "error",
        "indent": ["warn", 4],
        "react/jsx-indent": ["off", 2],
        "react/jsx-indent-props": ["off", 2],
        "max-len": 0,
        "require-jsdoc": 0,
        "linebreak-style": 0,
        "no-extend-native": 0
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },

    "plugins": ["prettier", "react", "jsx-a11y", "import"]
}
